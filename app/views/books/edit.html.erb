<h1>Editing Book</h1>
<%= form_with model:@book,url: "/books/#{@book.id}",local:true do |f| %>
   <h4>Title</h4>
   <%= f.text_field:title %>
   <h4>Body</h4>
   <%= f.text_area:body %>
   <%= f.submit 'Update Book' %>
<% end %>

   <p><%= link_to "show", "/books/#{@book.id}" %></p>
   <p><a href = "/books">back</a></p>