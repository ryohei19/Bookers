<h3>Books</h3>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @books.each do |post| %>
<tr>
<td>
<%= post.title %>
</td>
<td>
<%= post.body %>
</td>
<td>
<%= link_to "show", post_path(post.id) %>
<%= link_to "edit", edit_post_path(post.id) %>
<%= link_to "destroy", destroy_post_path(post.id), method: :delete, "data-confirm" => "Are you sure?" %>
</td>
</tr>
<% end %>
</tbody>
</table>

<h3>New book</h3>

<%= form_with model:@book,url:'/books', local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Create Book' %></br>

<% end %>
